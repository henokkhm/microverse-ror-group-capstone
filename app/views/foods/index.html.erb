<section>
  <h1>Food list</h1>
  <section>
    <%= link_to 'Add New Food', new_food_path %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Measurement Unit</th>
          <th>Unit Price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @foods.each do |food| %>
          <tr>
            <td><%= food.name %></td>
            <td><%= food.measurement_unit %></td>
            <td>'$'<%= food.price %></td>
            <td><%= link_to 'DELETE', food_path(food), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
</section>
