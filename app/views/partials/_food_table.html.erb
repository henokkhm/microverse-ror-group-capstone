<section>
  <%= link_to 'Add New Food', new_food_path %>
  <section id="table">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Measurement Unit</th>
          <th>Quantity</th>
          <th>Unit Price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @foods.each do |food| %>
          <tr>
            <td><%= food.name %></td>
            <td><%= food.measurement_unit %></td>
            <td><%= food.quantity %></td>
            <td>$<%= food.price %></td>
            <td><%= link_to 'DELETE', food_path(food), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
  <% if @foods.empty? %>
    <p>You have no food</p>
    <script>
      document.getElementById('table').style.display = 'none';
    </script>
  <% end %>
</section>