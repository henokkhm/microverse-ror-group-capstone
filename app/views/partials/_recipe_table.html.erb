<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Unit Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.quantity %><%= food.measurement_unit %></td>
        <td>$<%= food.price %></td>
        <td>
        <%= form_with model: food, url: food_path(food), method: :delete do |f| %>
          <%= f.submit "Delete" %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
