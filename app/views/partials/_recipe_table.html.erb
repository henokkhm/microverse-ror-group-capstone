<table>
  <thead>
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Value</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @foods_recipe.each do |recipe_food| %>
      <tr>
        <td><%= recipe_food.food.name %></td>
        <td><%= recipe_food.food.quantity %><%= recipe_food.food.measurement_unit %></td>
        <td>$<%= recipe_food.food.price  * recipe_food.quantity %></td>
        <td>
        <%= link_to 'Delete', recipe_foods_recipe_path(recipe_food), method: :delete %>
        </td>
        <%# <td><%= link_to 'DELETE', food_path(food), method: :delete %></td> %>
      </tr>
    <% end %>
  </tbody>
</table>
