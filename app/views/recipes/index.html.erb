<section>
  <% @recipes.each do |recipe| %>
    <section>
      <%= link_to recipe_path(recipe) do %>
      <h3><%= recipe.name %> </h3>
      <% end %>
      <%= link_to 'Remove', recipe_path(recipe) %>
    </section>
    <section>
      <p><%= recipe.description %> </p>
    </section>
  <% end %>
</section>