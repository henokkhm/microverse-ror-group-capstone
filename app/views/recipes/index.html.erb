<section>
  <% @recipes.each do |recipe| %>
    <section>
      <%= link_to recipe_path(recipe) do %>
      <h3><%= recipe.name %> </h3>
      <% end %>
      <%= form_with model: recipe, url: recipe_path(recipe), method: :delete do |f| %>
        <%= f.submit 'Remove' %>
      <% end %>
    </section>
    <section>
      <p><%= recipe.description %> </p>
    </section>
  <% end %>
</section>