<section>
  <h1>Add Recipe</h1>
    <%= form_with model: @recipe, url: recipes_path do |f| %>
    <div>
      <%= f.label :name%>:
      <%= f.text_field :name%>
    </div>
    <div>
      <%= f.label :preparation_time%>:
      <%= f.text_field :preparation_time%>
    </div>
    <div>
      <%= f.label :cooking_time%>:
      <%= f.text_field :cooking_time%>
    </div>
    <div>
      <%= f.label :description%>:
      <%= f.text_area :description%>
    </div>
    <%= f.submit 'Add recipe' %>
  <%end%>
</section>
