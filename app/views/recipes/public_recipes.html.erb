<section>
  <h1>Public Recipes</h1>
  <% @recipes.each do |recipe| %>
  <section>
    <div>
      <%= link_to recipe_path(recipe) do %>
      <h3><%= recipe.name %> </h3>
      <% end %>
      <p>By: <%= recipe.user.name %> </p>
    </div>
    <div>
      <p>Total food items: <%= recipe.foods_recipes.length %> </p>
      <p>Total price: <%= @total_prices[recipe.name] %> </p>
    </div>
  </section>
  <% end %>
</section>

